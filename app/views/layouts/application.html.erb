<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>BookExplorer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <% if user_signed_in? %>
      <nav class="p-8 flex justify-between items-center">
        <%= link_to root_path do %>
          <%= image_tag "welcome.jpg", class: "h-7", alt: "Logo of The Book Explorer" %>
        <% end %>
        <div class="space-x-2">
          <span class="mr-12">Logged in as <strong><%= current_user.email %></strong></span>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link' %>
          <%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }, :class => 'nav-link'  %>
        </div>
      </nav>
    <% end %>



    <%= yield %>
  </body>
</html>
